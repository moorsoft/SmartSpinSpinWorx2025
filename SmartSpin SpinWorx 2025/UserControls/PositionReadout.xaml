<UserControl x:Class="SmartSpin.UserControls.PositionReadout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartSpin.UserControls"
             mc:Ignorable="d" d:DesignWidth="150" Width="150">
    <GroupBox x:Name="title"  Header="Axis 1" FontSize="18">
        <StackPanel Orientation="Vertical" >
            <TextBlock x:Name="txtPosition" Text="0000.0" HorizontalAlignment="Right" Foreground="Yellow" Margin="5" FontSize="28"/>
            <TextBlock x:Name="txtLag"  Text="0" HorizontalAlignment="Right" FontSize="14" Margin="5"/>
            <TextBlock Text="Start Position" Foreground="Red" Margin="5"/>
            <TextBlock x:Name="txtStartPosition" Text="0000.0" Foreground="Red" HorizontalAlignment="Right" Margin="5"/>
        </StackPanel>
    </GroupBox>
</UserControl>
