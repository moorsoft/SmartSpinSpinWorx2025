<UserControl x:Class="SmartSpin.UserControls.SpindleReadout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartSpin.UserControls"
             mc:Ignorable="d" d:DesignWidth="150" Width="150">
    <GroupBox Header="Spindle" FontSize="18">
        <StackPanel Orientation="Vertical" >
            <TextBlock Text="{Binding SpindleRPM}" HorizontalAlignment="Right" Foreground="Yellow" Margin="5" FontSize="28"/>
            <TextBlock Text="{Binding SpindleLoad}" HorizontalAlignment="Right" Margin="5"/>
        </StackPanel>
    </GroupBox>
</UserControl>
